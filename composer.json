{
  "name": "arnoson/kirby-vite",
  "description": "Vite helper for Kirby CMS",
  "type": "kirby-plugin",
  "license": "MIT",
  "scripts": {
    "test": "./vendor/bin/phpunit --bootstrap ./tests/bootstrap.php --testdox ./tests/suites"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "getkirby/cms": "^3.7"
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "getkirby/composer-installer": true
    }
  },
  "require": {
    "getkirby/composer-installer": "^1.2"
  }
}
